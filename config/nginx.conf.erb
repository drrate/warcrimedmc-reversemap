worker_processes  2;
error_log /dev/stdout info;
daemon off;

events {
        worker_connections 256;
}

http {
        access_log /dev/stdout;
        server {
                listen <%= ENV["PORT"] %>;
                location / {
                        proxy_cache wcmcr;
                        proxy_cache_revalidate on;
                        proxy_cache_min_uses 3;
                        proxy_cache_use_stale error timeout updating http_500 http_502
                                      http_503 http_504;
                        proxy_cache_background_update on;
                        proxy_cache_lock on;
                        proxy_pass <%= ENV["MAP_SERVER"] %>;
                        proxy_ignore_headers Cache-Control;
                        proxy_cache_valid any 120m;
                        proxy_http_version 1.1;
                        proxy_buffering off;
                }
                location /data {
                         error_page 404 =200 /assets/emptyTile.json;
                                         gzip_static always;
                         proxy_cache wcmcr;
                         proxy_cache_revalidate on;
                         proxy_cache_min_uses 3;
                         proxy_cache_use_stale error timeout updating http_500 http_502
                                       http_503 http_504;
                         proxy_cache_background_update on;
                         proxy_cache_lock on;
                         proxy_pass <%= ENV["MAP_SERVER"] %>data/;
                         proxy_ignore_headers Cache-Control;
                         proxy_cache_valid any 20m;

               }
               location /live {
                                         proxy_pass <%= ENV["MAP_SERVER"] %>live;
               }
}
proxy_cache_path ./tmp levels=1:2 keys_zone=wcmcr:10m max_size=20g
                 inactive=240m use_temp_path=on;
	}
